---
/* Components */
import BaseHead from '../components/BaseHead.astro';
import { Header, Footer } from '../components';

const {
  content: { title, description, heroImage, githubLink },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={`project â”‚ ${title}`} description={description} />
  </head>

  <body class="bg-neutral-100 text-neutral-900">
    <Header />

    <main class="min-h-screen max-w-3xl pt-20 pb-8 px-6 mx-auto">
      <div class="flex flex-col">
        <figure class="w-full rounded-2xl overflow-hidden">
          <img src={`/${heroImage}`} alt={title} class="w-full" />
        </figure>
        <a
          href={githubLink}
          class="self-end mt-2 text-blue-600 hover:underline hover:underline-offset-2 hover:decoration-blue-600"
          >view on github page</a
        >
      </div>

      <!-- slot is our markdown content -->
      <section id="markdown">
        <slot />
      </section>
    </main>

    <Footer />
  </body>
</html>
