---
import BaseHead from '../components/BaseHead.astro';
import { Header, Footer, Intro, Skills, Portfolio } from '../components';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="bg-neutral-100 text-neutral-900">
    <Header client:load />

    <main class="min-h-screen max-w-4xl pt-16 px-6 mx-auto">
      <Intro />
      <Skills />
      <Portfolio />
    </main>

    <Footer />
  </body>
</html>
